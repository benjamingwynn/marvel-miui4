echo "patching framework.jar"
cd /Volumes/Cooking
mv Temporary/system/framework/framework.jar Temporary
baksmali -o framework framework.jar
cd /Volumes/Cooking
cp -v MIUI-resources/framework-jar/gles20canvas.smali Temporary/framework/android/view
cp -v MIUI-resources/framework-jar/Power.smali Temporary/framework/android/os
cp -v MIUI-resources/framework-jar/Camera*.smali Temporary/framework/android/hardware
cp -v MIUI-resources/framework-jar/Webview*.smali Temporary/framework/android/webkit
cp -v MIUI-resources/framework-jar/WifiNative.smali Temporary/framework/android/net
cp -v MIUI-resources/framework-jar/Performance.smali Temporary/framework/codeaurora
cp -v MIUI-resources/framework-jar/MediaRecoder.smali Temporary/framework/media
cp -v MIUI-resources/framework-jar/Systemproperties.smali Temporary/framework/os
cp -v MIUI-resources/framework-jar/telephony/RIL*.smali Temporary/framework/com/android/internal/telephony
cp -v MIUI-resources/framework-jar/SemcRIL*.smali Temporary/framework/com/android/telephony
echo "add missing methods to assetmanager.smali yourself"
scripts/press_enter
cd /Volumes/Cooking/Temporary	
smali -o classes.dex framework
zip -m framework.jar classes.dex
mv framework.jar system/framework
echo "patching done"

